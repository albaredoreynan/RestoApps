<h1>Companies</h1>

<%= grid(@clients_grid) do |g|

  g.column :column_name => "Name", :attribute_name => "name" do |client|
    client.name
  end

  g.column :column_name => "Address", :attribute_name => "address" do |client|
    client.address
  end

  g.column :column_name => "Contact Number", :attribute_name => "contact_number" do |client|
    client.contact_number
  end

  g.column do |client|
    link_to "Show", account_database_client_path(client), :class => "btn btn-mini"
  end

  g.column do |client|
	link_to "Edit", edit_account_database_client_path(client), :class => "btn btn-mini"
  end

  g.column do |client|
	link_to "Delete", account_database_client_path(client), :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-mini btn-danger"
  end

end -%>

	      

