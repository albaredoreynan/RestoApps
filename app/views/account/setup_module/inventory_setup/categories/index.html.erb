<%= render :partial => "/account/setup_module/inventory_setup/partials/container_header" %>
        <div class="container-fluid">
        	<div class="btn-group pull-right">
			  <a href="<%= new_account_setup_module_inventory_setup_category_path %>" class="btn btn-success">
			    <i class="icon-plus icon-white"></i> Create New Category
			  </a>
			</div>
        </div>
        <br/>
		<%= grid(@categories_grid, :class => "row-fluid") do |g|

  			g.column :column_name => "Name", :attribute_name => "name" do |category|
    			category.name
  			end

  			g.column :column_name => "Description", :attribute_name => "description" do |category|
    			category.description
  			end

  			g.column :column_name => "Restaurant",  :model_class => "Concept", :attribute_name => "name" do |category|
    			category.restaurant.name
  			end

  			g.column do |category|
    			link_to "Show", account_setup_module_organization_setup_category_path(category), :class => "btn btn-mini"
  			end

  			g.column do |category|
				link_to "Edit", edit_account_setup_module_organization_setup_category_path(category), :class => "btn btn-mini"
  			end

  			g.column do |category|
				link_to "Delete", account_setup_module_organization_setup_category_path(category), :confirm => 'Are you sure?', :method => :delete, :class => "btn btn-mini btn-danger"
  			end

		end -%>

		<%= include_wice_grid_assets %>
		
<%= render :partial => "/account/setup_module/inventory_setup/partials/container_footer" %>
