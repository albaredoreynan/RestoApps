<%= semantic_form_for([:account, :purchases_module, @purchase], :html => { :class => "form-horizontal" }) do |purchase_f| %>
  <%= purchase_f.semantic_errors %>
  <div class="well">
    <%= purchase_f.input :branch_id, :as => :select, :collection => Branch.all.map{ |b| [ b.name, b.id ] } %>
    <%= purchase_f.input :purchase_date, :label => "Purchase Date", :as => :string, :input_html => { :class => "datetimepicker" }, :required => true %>
    <%= purchase_f.input :supplier_id, :as => :select, :collection => Supplier.all.map{ |b| [ b.name, b.id ] } %>
    <%= purchase_f.input :invoice_number %>
  </div>
  <%= link_to "Cancel".html_safe, account_purchases_module_purchases_path, :class => 'btn' %>
  <%= purchase_f.submit "Submit", :class => 'btn btn-light-blue large' %>
<% end %>

<script>

$(function(){
	$(".datetimepicker").datetimepicker();
});

</script>